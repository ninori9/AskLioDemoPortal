##############################################################
# ASKLiO ‚Äî Development Environment Template (.env)
# ------------------------------------------------------------
# Copy this file to `.env` before running `docker compose up`.
# Fill in or adjust values as needed for your local setup.
##############################################################

###############################
# üóÑÔ∏è  DATABASE CONFIGURATION
###############################
# Database user ‚Äî default Postgres superuser
POSTGRES_USER=postgres

# Database password (only used locally; change in production)
POSTGRES_PASSWORD=postgres

# Database name for the application
POSTGRES_DB=asklio

# Hostname of the Postgres service (as defined in docker-compose)
POSTGRES_HOST=db

# Default Postgres port
POSTGRES_PORT=5432


###############################
# ü§ñ  WEAVIATE CONFIGURATION
###############################
# Host and port where Weaviate runs (matching docker-compose)
WEAVIATE_HTTP_HOST=weaviate
WEAVIATE_HTTP_PORT=8080

# gRPC host/port
WEAVIATE_GRPC_HOST=weaviate
WEAVIATE_GRPC_PORT=50051

# Use secure HTTPS / gRPCs connections?
# For local development: false
WEAVIATE_HTTP_SECURE=false
WEAVIATE_GRPC_SECURE=false


###############################
# üîê  SECURITY & ENVIRONMENT
###############################
# Secret key for signing tokens, sessions, etc.
# In production, use a strong random value (e.g. via `openssl rand -hex 32`)
SECRET_KEY=dev-secret

# Environment mode: local | dev | staging | prod
ENV=local

# When true, automatically seeds initial demo data on container start.
# Useful for first-time setup or demos. Disable in production.
SEED_ON_START=true


###############################
# üß†  OPENAI CONFIGURATION
###############################
# Your OpenAI API key used for embeddings and extraction.
OPENAI_API_KEY=sk-your-openai-key-here


###############################
# üåê  CLIENT AUTH
###############################
# API key for clients to access the backend.
SHARED_CLIENT_API_KEY=asklio-shared-demo-123